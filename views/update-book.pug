extends layout

block content
    h1 Update Book
    form(action=`/books/${book.id}`, method="post")
        if (errors) 
            h2.error Oooops!
            ul.error
                each error in errors
                    li #{error}

        p
            label(for="title") Title
            input(id="title" type="text", name="title", value=`${book.title}`)
        p
            label(for="author") Author
            input(id="author" type="text", name="author", value=`${book.author}`)
        p
            label(for="genre") Genre
            input(id="genre" type="text", name="genre", value=`${book.genre}`)
        p
            label(for="year") Year
            input(id="year" type="text", name="year", value=`${book.year}`)
        p
            input(type="submit", value="Update Book" class="primary-btn")
    form(action=`/books/${book.id}/delete`, method="post", class="delete-form")
            a(class="secondary-btn" href="/books") Cancel
            input(type="submit", value="Delete Book", class="secondary-btn")